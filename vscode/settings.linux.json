{
    "debug.inlineValues": true,
    "editor.codeLens": false,
    "editor.fontFamily": "'Input Mono', monospace",
    "editor.fontSize": 12,
    "editor.formatOnType": true,
    "editor.lineHeight": 22,
    "editor.minimap.enabled": false,
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.renderIndentGuides": true,
    "editor.renderLineHighlight": "all",
    "editor.renderWhitespace": "all",
    "editor.rulers": [120],
    "editor.showFoldingControls": "always",
    "files.hotExit": "onExitAndWindowClose",
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,
    "html.format.extraLiners": "",
    "html.format.indentInnerHtml": true,
    "markdown.preview.fontSize": 18,
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.fontFamily": "'Input Mono', monospace",
    "terminal.integrated.fontSize": 13,
    "terminal.integrated.shell.linux": "tmux",
    "terminal.integrated.shellArgs.linux": ["new", ";", "set", "status", "off"],
    "window.menuBarVisibility": "toggle",
    "window.openFilesInNewWindow": "off",
    "window.openFoldersInNewWindow": "on",
    "window.title": "${dirty}${activeEditorMedium}${separator}${rootName}",
    "workbench.activityBar.visible": false,
    "workbench.colorTheme": "Peacock",
    "workbench.iconTheme": "vs-minimal",
    "workbench.sideBar.location": "right",
    "workbench.startupEditor": "none",
    "zenMode.fullScreen": false,
    "[asciidoc]": {
        "editor.folding": false,
        "editor.lineNumbers": "off",
        "editor.renderWhitespace": "none",
        "editor.rulers": [],
        "editor.wrappingIndent": "indent",
        "editor.wordWrap": "bounded",
        "editor.wordWrapColumn": 120
    },
    "[markdown]": {
        "editor.folding": false,
        "editor.lineNumbers": "off",
        "editor.renderWhitespace": "none",
        "editor.rulers": [],
        "editor.wrappingIndent": "indent",
        "editor.wordWrap": "bounded",
        "editor.wordWrapColumn": 120
    }
}
