[
    // Leader mode keys
    {
        "key": "cmd+contextmenu",
        "command": "leadermode.enter",
        "when": "!leadermode.isActive"
    },
    {
        "key": "cmd+contextmenu",
        "command": "leadermode.exit",
        "when": "leadermode.isActive"
    },

    // General action key bindings. Many of these start with an "alt+space" prefix.
    {
        "key": "ctrl+,",
        "command": "workbench.action.openGlobalSettings"
    },
    {
        "key": "alt+space shift+/",
        "command": "workbench.action.openGlobalKeybindings"
    },
    {
        "key": "ctrl+tab",
        "command": "workbench.action.nextEditorInGroup"
    },
    {
        "key": "ctrl+shift+tab",
        "command": "workbench.action.previousEditorInGroup"
    },
    {
        "key": "ctrl+`",
        "command": "workbench.action.terminal.focus"
    },
    {
        "key": "ctrl+=",
        "command": "editor.action.fontZoomIn"
    },
    {
        "key": "ctrl+-",
        "command": "editor.action.fontZoomOut"
    },
    {
        "key": "ctrl+0",
        "command": "editor.action.fontZoomReset"
    },
    {
        "key": "down",
        "command": "workbench.action.navigateDown",
        "when": "leadermode.isActive"
    },
    {
        "key": "left",
        "command": "workbench.action.navigateLeft",
        "when": "leadermode.isActive"
    },
    {
        "key": "right",
        "command": "workbench.action.navigateRight",
        "when": "leadermode.isActive"
    },
    {
        "key": "up",
        "command": "workbench.action.navigateUp",
        "when": "leadermode.isActive"
    },
    {
        "key": "ctrl+-",
        "command": "workbench.action.navigateBack"
    },
    {
        "key": "ctrl+shift+-",
        "command": "workbench.action.navigateForward"
    },
    {
        "key": "alt+space space",
        "command": "workbench.action.toggleEditorGroupLayout",
        "when": "!terminalFocus"
    },
    {
        "key": "alt+space alt+space",
        "command": "workbench.action.quickOpen",
        "when": "!terminalFocus"
    },
    {
        "key": "alt+space p",
        "command": "workbench.action.openRecent",
        "when": "!terminalFocus"
    },
    {
        "key": "alt+space ;",
        "command": "workbench.action.showCommands",
        "when": "!terminalFocus"
    },
    {
        "key": "f",
        "command": "editor.action.formatDocument",
        "when": "!editorHasSelection && editorTextFocus && !editorReadonly && leadermode.isActive"
    },
    {
        "key": "f",
        "command": "editor.action.formatSelection",
        "when": "editorHasSelection && editorTextFocus && !editorReadonly && leadermode.isActive"
    },

    // Text editing key bindings.
    {
        "key": "ctrl+shift+up",
        "command": "editor.action.insertCursorAbove",
        "when": "editorTextFocus"
    },
    {
        "key": "ctrl+shift+down",
        "command": "editor.action.insertCursorBelow",
        "when": "editorTextFocus"
    },
    {
        "key": "ctrl+up",
        "command": "editor.action.moveLinesUpAction",
        "when": "editorTextFocus"
    },
    {
        "key": "ctrl+down",
        "command": "editor.action.moveLinesDownAction",
        "when": "editorTextFocus"
    },
    {
        "key": "ctrl+right",
        "command": "cursorWordEndRight",
        "when": "editorTextFocus"
    },
    {
        "key": "ctrl+left",
        "command": "cursorWordStartLeft",
        "when": "editorTextFocus"
    },
    {
        "key": "ctrl+shift+right",
        "command": "cursorWordEndRightSelect",
        "when": "editorTextFocus"
    },
    {
        "key": "ctrl+shift+left",
        "command": "cursorWordStartLeftSelect",
        "when": "editorTextFocus"
    }
]
