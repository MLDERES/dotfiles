[user]
	email = me@stephencoakley.com
	name  = Stephen M. Coakley
	signingkey = 494C4FC0
[core]
	editor = code -w
	excludesfile = ~/.gitignore
[alias]
	alias = config --get-regexp "^alias\\."
	# abbreviations
	c = commit
	ch = checkout
	cm = commit -m
	contains = merge-base --is-ancestor
	m = merge
	s = status --short --branch
	# workflow
	amend = commit --amend
	cb = "!git checkout $(git branch -a --format '%(refname)' | sed -e 's#^refs/heads/##' -e 's#^refs/remotes/[^/]*/##' | sort | uniq | $FILTER)"
	pub = "!git push -u origin $(git rev-parse --abbrev-ref HEAD)"
	squash = rebase -i
	tags = tag --list
	undo = reset HEAD~1 --mixed
	up = !git stash && git pull --rebase && git stash pop
	update = "!git stash && git pull && git stash pop"
	wip = !git add -A && git commit -m wip
	# index
	ignore = update-index --assume-unchanged
	unignore = update-index --no-assume-unchanged
	ignored = "!git ls-files -v | grep '^[[:lower:]]'"
[push]
	default = simple
[commit]
	gpgsign = true
[gpg]
	program = gpg2
[color]
	ui = true
